<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>JSYG Full Editor</title>

    <link rel="stylesheet" href="node_modules/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="node_modules/font-awesome/css/font-awesome.css" />

    <link rel="stylesheet" href="JSYG.FullEditor.css" />
    <link rel="stylesheet" href="./JSYG.TextEditor/JSYG.TextEditor.css" />

    <style>
      svg {
        border: 1px solid gray;
        background-color: #ddd;
        display: inline-block;
      }
      form {
        display: inline-block;
        vertical-align: top;
        width: 25%;
      }
      .perso {
        fill: #ffffff;
        stroke: black;
        stroke-width: 2;
      }
      text.perso {
        fill: black;
        stroke: none;
      }
      fieldset {
        margin: px;
      }
      #uploadFile {
        display: none;
      }
      .btn.btn-default img {
        height: 18px;
      }
      .col-form-label {
        padding-left: 0px;
        width: 30px !important;
      }
    </style>
  </head>
  <body>
    <div class="row">
      <div class="col-md-9">
        <svg width="100%" height="800" id="content"></svg>
      </div>

      <div class="col-md-3">
        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
          <br />
          <br />
          <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingOne">
              <h5 class="panel-title">
                <a role="button" data-bs-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne"> File </a>
              </h5>
            </div>
            <div id="collapseOne" class="collapse collapse_ in" role="tabpanel" aria-labelledby="headingOne">
              <div class="panel-body">
                <fieldset>
                  <button class="btn btn-default" id="newDocument" type="button">New document</button>
                  <button class="btn btn-default" id="openDocument" type="button">Open SVG file</button>
                  <button class="btn btn-default" id="openImage" type="button">Open Image file</button>
                  <button class="btn btn-default" id="openExample" type="button">Open example</button>
                  <button class="btn btn-default" id="insertImage" type="button">Insert Image</button>

                  <div class="row">
                    <div class="col">
                      <label for="width" class="col-form-label">Width:</label>
                    </div>
                    <div class="col">
                      <input type="text" class="form-control" id="width" placeholder="width" value="500" />
                    </div>
                  </div>

                  <div class="row">
                    <div class="col">
                      <label for="height" class="col-form-label">Height:</label>
                    </div>
                    <div class="col">
                      <input type="text" class="form-control" id="height" placeholder="height" value="500" />
                    </div>
                  </div>

                  <button class="btn btn-default" id="downloadSVG" type="button">Download SVG</button>
                  <button class="btn btn-default" id="downloadPNG" type="button">Download PNG</button>
                  <button class="btn btn-default" id="print" type="button">Print</button>
                </fieldset>
              </div>
            </div>
          </div>
          <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingTwo">
              <h5 class="panel-title">
                <a class="collapsed" role="button" data-bs-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo"> Edit </a>
              </h5>
            </div>
            <div id="collapseTwo" class="collapse collapse_ in" role="tabpanel" aria-labelledby="headingTwo">
              <div class="panel-body">
                <fieldset>
                  <button class="btn btn-default" id="copy" type="button">
                    <i class="fa fa-files-o"></i>
                    Copy
                  </button>
                  <button class="btn btn-default" id="cut" type="button">
                    <i class="fa fa-scissors"></i>
                    Cut
                  </button>
                  <button class="btn btn-default" id="paste" type="button">
                    <i class="fa fa-clipboard"></i>
                    Paste
                  </button>
                  <button class="btn btn-default" id="remove" type="button">
                    <i class="fa fa-remove"></i>
                    Delete
                  </button>
                  <button class="btn btn-default" id="undo" type="button">
                    <i class="fa fa-undo"></i>
                    Undo
                  </button>
                  <button class="btn btn-default" id="redo" type="button">
                    <i class="fa fa-repeat"></i>
                    Redo
                  </button>
                  <br />
                  <br />
                  key shortcuts (<code>Ctrl+C</code>,
                  <code>Ctrl+X</code>, <code>Ctrl+V</code>, <code>Del</code>, <code>Ctrl+Z</code>, <code>Ctrl+Y</code>)
                  <br />
                  <br />
                </fieldset>
              </div>
            </div>
          </div>
          <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingThree">
              <h5 class="panel-title">
                <a class="collapsed" role="button" data-bs-toggle="collapse" data-parent="#accordion" href="#viewPanel" aria-expanded="false" aria-controls="viewPanel"> View </a>
              </h5>
            </div>
            <div id="viewPanel" class="collapse collapse_ in" role="tabpanel" aria-labelledby="headingThree">
              <div class="panel-body">
                <fieldset>
                  <p>Use <code>Ctrl+mousewheel</code> to zoom in and out.</p>
                  <button class="btn btn-default" id="zoomIn" type="button">
                    <i class="fa fa-zoom-in"></i>
                    Zoom in
                  </button>
                  <button class="btn btn-default" id="zoomOut" type="button">
                    <i class="fa fa-zoom-out"></i>
                    Zoom out
                  </button>
                  <button class="btn btn-default" id="mousePan" type="button">Mouse Pan</button>
                  <button class="btn btn-default" id="marqueeZoom" type="button">Marquee Zoom</button>
                  <button class="btn btn-default" id="fitToCanvas" type="button">Fit to canvas</button>
                  <button class="btn btn-default" id="fitToDoc" type="button">Fit to document</button>
                  <button class="btn btn-default" id="realSize" type="button">Real size</button>
                </fieldset>
              </div>
            </div>
          </div>

          <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingFive">
              <h5 class="panel-title">
                <a class="collapsed" role="button" data-bs-toggle="collapse" data-parent="#accordion" href="#drawShapes" aria-expanded="false" aria-controls="drawShapes"> Draw </a>
              </h5>
            </div>
            <div id="drawShapes" class="collapse collapse_ in" role="tabpanel" aria-labelledby="headingFive">
              <div class="panel-body">
                <fieldset>
                  <div class="row">
                    <div class="col">
                      <select id="shape" class="form-control">
                        <option>-</option>
                        <option>rect</option>
                        <option>circle</option>
                        <option>ellipse</option>
                        <option>line</option>
                        <option>polyline</option>
                        <option>polygon</option>
                        <option>path</option>
                        <option>freehand path</option>
                        <option>text</option>
                      </select>
                    </div>
                    <div class="col">
                      <button id="drawShapesOff" type="button" class="btn btn-outline-primary">shape off</button>
                    </div>
                  </div>
                </fieldset>

                <br />
                Color selected elements <br />
                <button class="btn btn-default" id="setColor" type="button">color</button>
                <br />
              </div>
            </div>
          </div>

          <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingFive">
              <h5 class="panel-title">
                <a class="collapsed" role="button" data-bs-toggle="collapse" data-parent="#accordion" href="#setAttr" aria-expanded=true aria-controls="setAttr"> SVGattr </a>
              </h5>
            </div>
            <div id="setAttr" class="collapse collapse_ in show " role="tabpanel" aria-labelledby="setAttr">
              <div class="panel-body">
                <br />
                <div class="row">
                  <div class="col">
                    <button id="svgAttrGet" type="button" class="btn btn-outline-primary">Get</button>
                  </div>
                  <div class="col"></div>
                  <div class="col">
                    <button id="svgAttrSet" type="button" class="btn btn-outline-primary">Set</button>
                  </div>
                  <div class="col"></div>
                </div>
                <br />
                <fieldset>
                  <div class="row">
                    <div class="col">
                      <label for="width" class="col-form-label">class:</label>
                    </div>
                    <div class="col">
                      <input type="text" class="form-control" id="class" placeholder="class" value="500" />
                    </div>
                  </div>

                  <div class="row">
                    <div class="col">
                      <label for="height" class="col-form-label">fill:</label>
                    </div>
                    <div class="col">
                      <input type="text" class="form-control" id="fill" placeholder="fill" value="500" />
                    </div>
                  </div>
                  <div class="row">
                    <div class="col">
                      <label for="height" class="col-form-label">opacity:</label>
                    </div>
                    <div class="col">
                      <input type="text" class="form-control" id="fillopc" placeholder="fillopc" value="500" />
                    </div>
                  </div>




                  <div class="row">
                    <div class="col">
                      <label for="height" class="col-form-label">Height:</label>
                    </div>
                    <div class="col">
                      <select id="shape" class="form-control">
                        <option>-</option>
                        <option>rect</option>
                        <option>circle</option>
                        <option>ellipse</option>
                        <option>line</option>
                        <option>polyline</option>
                        <option>polygon</option>
                        <option>path</option>
                        <option>freehand path</option>
                        <option>text</option>
                      </select>
                    </div>
                  </div>

                  <br />
                  <label>
                    <input type="checkbox" id="editPosition" checked="checked" />
                    Edit position
                  </label>
                  <br />
                  <label>
                    <input type="checkbox" id="editSize" checked="checked" />
                    Edit size
                  </label>
                  <br />
                  <label>
                    <input type="checkbox" id="editRotation" checked="checked" />
                    Edit rotation
                  </label>
                  <br />

                  <label>
                    <input type="checkbox" id="editText" checked="checked" />
                    Edit text
                  </label>
                </fieldset>

                <hr />



<div class="row mb-3">
  <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Email</label>
  <div class="col-sm-10">
